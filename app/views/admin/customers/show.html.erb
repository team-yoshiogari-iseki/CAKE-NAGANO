<div class = "container">

  <div class = "row m-5">
    <h2 class = "admin-customers-show"><%= @customerlast_name %>会員の会員詳細</h2>
  </div>

  <div class = "row"> 
    <div class = "col">
      <table class = "table">
        <tr>
          <th>会員Id</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= @customerlast_name %><%= @customerfirst_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= @customer.last_name_read %><%= @customer.first_name_read %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.adress %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <td> @customer.user_states</td>
        </tr>
      </table>
    </div>
  </div>
    
  <div class = "row">
    <div class = "btn btn-success">
      <%= link_to "編集する",edit_admin_customer_path %>
    </div>
    <div class = "btn btn-primary">
      <%= link_to "注文履歴一覧を見る",admin_orders_path %>
    </div>
  </div>
  
</div>