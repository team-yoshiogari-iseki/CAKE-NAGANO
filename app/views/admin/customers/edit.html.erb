<div class = "container">

  <div class = "row m-5">
    <h2 class = "admin-customers-edit">@user.nameさんの会員情報編集</h2>
  </div>

  <div class = "row justify-content-center">
      <%= form_with model:@customer, url:admin_customer_path, local:true do |f| %>
      
      <%= render 'admin/shared/error_messages',resource: @customer %>
      
      <div class="form-group form-inline ">
        <label class="col-md-3">会員ID</label>
        <div class="col-md-9 ">
          <%= f.text_field :id, class:"form-control" %>
        </div>
      </div>

      <div class="form-group form-inline ">
        <label class="col-md-3">氏名</label>
        <div class="col-md-9 ">
          <div class = "name_area d-flex">
            <div><%= f.text_field :last_name, class:"form-control" %></div>
            <div><%= f.text_field :first_name, class:"form-control" %></div>
          </div>
        </div>
      </div>


      <div class="form-group form-inline ">
        <label class="col-md-3">フリガナ</label>
        <div class="col-md-9 ">
          <div class = "name_read_area d-flex">
              <div><%= f.text_field :last_name_read, class:"form-control" %></div>
              <div><%= f.text_field :first_name_read, class:"form-control" %></div>
          </div>
        </div>
      </div>

      <div class="form-group form-inline ">
        <label class="col-md-3">郵便番号</label>
        <div class="col-md-9 ">
          <%= f.text_field :postal_code, class:"form-control" %>
        </div>
      </div>

      <div class="form-group form-inline ">
        <label class="col-md-3">住所</label>
        <div class="col-md-9 ">
          <%= f.text_field :address, class:"form-control" %>
        </div>
      </div>

      <div class="form-group form-inline ">
        <label class="col-md-3">メールアドレス</label>
        <div class="col-md-9 ">
          <%= f.text_field :email, class:"form-control" %>
        </div>
      </div>

      <div class="form-group form-inline ">
        <label class="col-md-3">会員ステータス</label>
        <div class="col-md-9 ">
           f.text_field :user_states, class:"form-control" 
        </div>
      </div>

      <div class="form-group form-inline">
        <div class = "col-md-3"></div>
        <div class="actions col-md-9">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      </div>
      
    <% end %>

  </div>
</div>