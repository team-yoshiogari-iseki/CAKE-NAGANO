<div class="container">
  <p class="text-success"><%= flash[:notice]%></p>
  <div class="row mt-5">
      <h3 class = "admin-customers-index" style="background-color:rgba(107,90,105,0.1);">ジャンル一覧・追加</h3>
  </div>  
  <div class = "row m-5">
    <%= form_with model:@genre, url:admin_genres_path,local:true do |f| %>
      <div class="form-group form-inline">
      <label for="genre_name">ジャンル名</label>
        <%= f.text_field :name, class: "form-control mx-5" %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
  <div class="container">
      <div class="row-md-5 mt-5">
        <div class="col-4">
        <table class="table table-bordered">
          <thead>
            <tr>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-sm btn-success" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>