<div class = "container">

  <div class = "row m-5">
    <h2 class = "admin-orders-show">注文詳細</h2>
  </div>

  <div class = "row"> 
    <div class = "col">
      <%= form_with @order, local:true do |f| %>
      <table class = "table">
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
        </tr>

        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>

        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><%= @order.address %></br>
            <%= @order.orderer_name %>
          </td>
        </tr>

        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_way %></td>
        </tr>
        
        <tr>
          <th>注文ステータス</th>
          <td><%= f.select :order_status, Order.order_statuses,keys.map {|k| [I18n.t("enums.order.order_status.#{k}"), k]}) %></td>
        </tr>

      </table>
      <% end %>
    </div>
  </div>
    
  <div class = "row">
    <div class = "col-md-8">
      <%= render 'show/show', order_details: @order_details  %>
    </div>
    <div class = "col-md-4">
      <tr>
        <th>商品合計</th>
        <td></td>
      </tr>
      
      <tr>
        <th>送料</th>
        <td><%= @order.postage %></td>
      </tr>
      
      <tr>
        <th>請求金額</th>
        <td><%= @order.claimed %></td>
      </tr>
    </div>
  </div>
  
</div>