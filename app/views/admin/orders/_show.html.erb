<table class = "table">
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>注文ステータス</th>
   </tr>
  </thead>
<% order_details.each do |order_detail| %>
  <tbody>
    <tr>
      <td><%= order_detail.item.name %></td>
      <td><%= order_detail.price %></td>
      <td><%= order_details.quantity %></td>
      <td><%= f.select :making_status, options_from_collection_for_select(OrderDetail.all, :id, :full_address) %></td>
      <td></td>
    </tr>
  </tbody>
  <% end %>
</table>
