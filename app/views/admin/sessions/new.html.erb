<div class="container">
  
  <div class="row-md-12 mt-5">
      <h2>管理者ログイン</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.label :空白, class: "col-md-2 text-white" %>
      <div class="form-group">
        <%= f.label :空白, class: "col-md-2 text-white" %>
        <%= f.label :メールアドレス, class: "col-md-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4" %>
      </div>
    
      <div class="form-group col-md-offset-2">
        <%= f.label :空白, class: "col-md-2 text-white" %>
        <%= f.label :パスワード, class: "col-md-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "col-md-4" %>
      </div>
    
      <div class="actions">
        <%= f.label :空白, class: "col-md-4 text-white ml-1" %>
        <%= f.submit "ログイン",class: "col-md-2 btn-primary rounded-lg" %>
      </div>
    <% end %>
    
    <%= render "admin/shared/links" %>
  </div>
</div>