<div class="container">

  <div class="row-md-12 mt-5">
      <h3 class="ml-5 col-md-3 text-center d-inline" style="background-color:rgba(205, 197, 197, 0.53);">配送先編集</h3>
    <div class = "m-5">
      <%= form_with model:@address, url:address_path,local:true do |f| %>
      <div class="form-group">
      <label for="address_name", class="col-md-3">郵便番号（ハイフンなし）</label>
      <%= f.text_field :postal_code, autocomplete: "postal_code" ,placeholder: "0000000" %>
      </div>

      <div class="form-group">
      <label for="address", class="col-md-3">住所</label>
      <%= f.text_field :address, autocomplete: "address", class: "col-md-5", placeholder: "東京都渋谷区代々木神園町0-0"%>
      </div>

      <div class="form-group">
      <label for="address_name", class="col-md-3">宛名</label>
      <%= f.text_field :name, autocomplete: "name" ,placeholder: "令和道子" %>
      <%= f.label :空白, class: "col-md-3 text-white" %>
      <%= f.submit "変更内容を保存", class: "btn btn-success col-md-2" %>
      </div>
      <% end %>
    </div>
  </div>
</div>