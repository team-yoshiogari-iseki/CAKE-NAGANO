<div class="container">

  <div class="row-md-12 mt-5">
      <h2>配送先登録／一覧</h2>

    <div class = "m-5">
      <%= form_with model:@address, url:addresses_path,local:true do |f| %>
      <div class="form-group">
      <label for="address_name", class="col-md-3">郵便番号（ハイフンなし）</label>
      <%= f.text_field :postal_code, autocomplete: "postal_code" ,placeholder: "0000000" %>
      </div>

      <div class="form-group">
      <label for="address", class="col-md-3">住所</label>
      <%= f.text_field :address, autocomplete: "address", class: "col-md-5" ,placeholder: "東京都渋谷区代々木神園町0-0"%>
      </div>

      <div class="form-group">
      <label for="address_name", class="col-md-3">宛名</label>
      <%= f.text_field :name, autocomplete: "name" ,placeholder: "令和道子" %>
      <%= f.label :空白, class: "col-md-3 text-white" %>
      <%= f.submit "新規登録",class: "btn btn-success col-md-2" %>
      </div>
      <% end %>
    </div>
  </div>
  <div class="container">
      <div class="row-md-5 mt-5">
        <div class="col-4">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>郵便番号</th>
              <th>住所</th>
              <th>宛名</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to "編集する", edit_address_path(address), class: "btn btn-sm btn-success" %>
                <%= link_to "削除する", addresses_path, method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
