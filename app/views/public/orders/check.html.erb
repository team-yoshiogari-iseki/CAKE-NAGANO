<div class="container">
  <h5>注文情報確認</h5>
  <div class="row">
    <div class="col-md-7">
      <table class="table table-bordered border-dark">
        <thead>
          <tr class="active">
            <th class="col-md-4">商品名</th>
            <th class="col-md-1">単価(税込)</th>
            <th class="col-md-1">数量</th>
            <th class="col-md-1">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @total = 0 %>
          <% @cart_items.each do |cart_item| %>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.with_tax_price %></td>
            <td><%= cart_item.quantity %></td>
            <td><%= cart_item.subtotal %></td>
          <% @total += cart_item.subtotal %>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <table class="table table-bordered border-dark">
        <tr class="active">
          <th>送料</th>
          <td><%= @order.postage.to_s %></td>
        </tr>
        <tr class="active">
          <th>商品合計</th>
          <td><%= @total %></td>
        </tr>
        <tr>
          <th>請求合計</th>
          <td><%= @order.postage.to_i + @total %></td>
        </tr>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mt-4">
      <h6><strong>支払方法</strong></h6>
        <% if @order.payment_way == 0 %>
          <span>クレジットカード</span>
        <% else %>
          <span>銀行振込</span>
        <% end %>
      </div>
      <div class="col-md-10 mt-4">
        <h6><strong>お届け先</strong></h6>
        <span>
          〒<%= @order.postal_code %><%= @order.address %></br>
          <%= @order.orderer_name %>
        </span>
      </div>
    <%= form_with model: @order, url: orders_path, local: true do |f| %>
      <%= f.hidden_field :postal_code %>
      <%= f.hidden_field :address %>
      <%= f.hidden_field :orderer_name %>
      <%= f.hidden_field :payment_way %>
      <%= f.hidden_field :postage %>
      <%= f.hidden_field :claimed, :value => [@order.postage.to_i + @total] %>
    <%= f.submit "注文を確定する", class: 'btn btn-success mt-4 mx-auto' %>
    <% end %>
  </div>
</div>