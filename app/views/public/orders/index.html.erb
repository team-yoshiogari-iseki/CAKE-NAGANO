<div class="container">
  <div class="row-md-12 mt-5">
    <h3 class="ml-5 col-md-3 text-center d-inline" style="background-color:rgba(205, 197, 197, 0.53);">注文履歴一覧</h3>
    <table class="mt-5" border=1 >
      <thead>
        <tr class="active" style="background-color:rgba(107,90,105,0.1);">
          <th class="col-md-2">注文日</th>
          <th class="col-md-4">配送先</th>
          <th class="col-md-2">注文商品</th>
          <th class="col-md-1 pr-2 pl-2">支払金額</th>
          <th class="col-md-1 pr-2 pl-2">ステータス</th>
          <th class="col-md-1 pr-2 pl-2">注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at %></td>
          <td>
            <%= order.postal_code %></br>
            <%= order.address %></br>
            <%= order.orderer_name %>
          </td>
          <td>
            <% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= order.claimed %>円</td>
          <td><%= order.order_status %></td>
          <td><%= link_to "表示する", order_path(order), class: 'btn btn-primary' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= paginate @orders %>
  </div>
</div>
