<div class="container">
  <p class="pt-5 text-danger"><%= flash[:error] %></p>
  <div class="row-md-12 mt-5">
    
    <h4 class="ml-5 col-md-3 text-center d-inline" style="background-color: rgba(205, 197, 197, 0.53);">新規会員登録</h4>
    
    <div class="mt-5">
      <%= form_for(resource, as: resource_name, url: customer_registration_path) do |f| %>
        <%= render "public/shared/error_messages",resource: resource %>
        
        <div class="form-group">
          <%= f.label :名前 , class: "col-md-2" %>
          <%= f.label :（姓）,class: "col-md-1 pl-4" %>
          <%= f.text_field :last_name, autocomplete: "last_name",placeholder: "令和"%>
          <%= f.label :（名）,class: "col-md-1 pl-4" %>
          <%= f.text_field :first_name, autocomplete: "first_name",placeholder: "道子" %>
        </div>
        
        <div class="form-group mt-3">
          <%= f.label :フリガナ , class: "col-md-2"%>
          <%= f.label :（セイ）,class: "col-md-1 px-0 pl-4" %>
          <%= f.text_field :last_name_read, autocomplete: "last_name_read",placeholder: "レイワ" %>
          <%= f.label :（メイ） ,class: "col-md-1 px-0 pl-4" %>
          <%= f.text_field :first_name_read, autocomplete: "first_name_read" ,placeholder: "ミチコ" %>
        </div>
        
        <div class="form-group">
          <%= f.label :メールアドレス , class: "col-md-3"  %>
          <%= f.email_field :email, autocomplete: "email",placeholder: "sample@exmple.com" %>
        </div>
        
        <div class="form-group">
        <%= f.label :郵便番号（ハイフンなし）, class: "col-md-3"  %>
        <%= f.text_field :postal_code, autocomplete: "postal_code",placeholder: "0000000" %>
        </div>
        
        <div class="form-group">
        <%= f.label :住所 , class: "col-md-3" %>
        <%= f.text_field :address, autocomplete: "address", class: "col-md-6",placeholder: "東京都渋谷区代々木神園町0-0"%>
        </div>
        
        <div class="form-group">
        <%= f.label :電話番号（ハイフンなし）, class: "col-md-3"  %>
        <%= f.text_field :telephone_number, autocomplete: "telephone_number" ,placeholder: "00000000000" %>
        </div>
        
        <div class="form-group">
          <%= f.label :パスワード（6文字以上）, class: "col-md-3 "%>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>
        
        <div class="form-group">
          <%= f.label :パスワード（確認用）, class: "col-md-3"%>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
        
        <div class="actions">
          <%= f.label :空白, class: "col-md-3 text-white" %>
          <%= f.submit "新規登録",class: "btn btn-success col-md-2" %>
        </div>
      <% end %>
    </div>
    
    <div class="form-group mt-4 ml-5">
    <h4 class="col-md-3 text-center d-inline" style="background-color:rgba(205, 197, 197, 0.53);">既に登録済みの方</h4>
    <div class=" mt-3 offset-1">
    <%= link_to "こちら", new_customer_session_path %>
    <span> からログインしてください。</span>
    </div>
    </div>

  </div>
</div>