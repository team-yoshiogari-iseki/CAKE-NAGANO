<div class="container">
  <div class="mt-5">
      <div>
      <h3 class="offset-2 col-md-3 text-center d-inline" style="background-color:rgba(107,90,105,0.1);">マイページ</h3>
      </div>
      <div class="mt-4 mb-4 btn-group align-items-center">
      <h4 class="font-weight-bold pt-2">登録情報</h4>
      <%= link_to '編集する',edit_customer_path ,class: "btn btn-success ml-5 rounded" %>
      </div>
      
      <div class="col-md-7 px-0">
        <table class="table table-bordered  " border="1">
          <tr class="border"> 
            <td class="col-2 border-dark" style="background-color:rgba(107,90,105,0.1);">氏名</td>
            <td class="col-5 border-dark"><%= @customer.last_name %><%= @customer.first_name  %></td>
          </tr>
          <tr>
            <td class="col-2 border-dark" style="background-color:rgba(107,90,105,0.1);">カナ</td>
            <td class="col-5 border-dark"><%= @customer.last_name_read %><%= @customer.first_name_read  %></td>
          </tr>
          <tr>
            <td class="col-2 border-dark" style="background-color:rgba(107,90,105,0.1);">郵便番号</td>
            <td class="col-5 border-dark"><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td class="col-2 border-dark" style="background-color:rgba(107,90,105,0.1);">住所</td>
            <td class="col-5 border-dark"><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="col-2 border-dark" style="background-color:rgba(107,90,105,0.1);">電話番号</td>
            <td class="col-5 border-dark"><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="col-2 border-dark" style="background-color:rgba(107,90,105,0.1);">メールアドレス</td>
            <td class="col-5 border-dark"><%= @customer.email %></td>
          </tr>
          </table>
      </div>
      
      <div class="mt-4 mb-3 btn-group align-items-center px-0">
        <h4 class="font-weight-bold pt-2">配送先</h4>
        <%= link_to '一覧を見る',edit_customer_path ,class: "btn btn-primary ml-5 ml-5 rounded" %>
      </div>
      
      <div class="row ml-1 px-0">
        <h4 class="font-weight-bold pt-2">注文履歴</h4>
        <%= link_to '一覧を見る',edit_customer_path ,class: "btn btn-primary ml-5 rounded" %>
      </div>
       
  </div>    
</div>