<div class="container mt-3 mx-5">
  <div class="row">

    <%= render 'layouts/genre_search', genres: @genres%>

    <div class="col-md-9 offset-1 mt-2">
      <h2>商品一覧<small class="text-muted">（全<%= @items.count %>件）</small></h2>
      <div class="d-flex align-content-between flex-wrap">

       <% @items.each do |item| %>
        <div class="col-md-3 mt-3">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, size: "160x120", class:"card-img-top"; %>
          <% end %>
          <p class="card-title mx-auto pt-2">
              <%= item.name %></br>
              ¥<%= item.with_tax_price.to_s(:delimited) %>
            <span class="small">(税込)</span>
            </p>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
