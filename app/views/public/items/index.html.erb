<div class="container-fluid mt-3 mx-5">
  <div class="row">

    <%= render 'layouts/genre_search', genres: @genres%>

      <div class="col-md-8 offset-md-1">
        <h2>商品一覧</h2>
        <div class="d-flex align-content-between flex-wrap">

          <% @items.each do |item| %>
          <div class="mx-4 mt-4">
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, size: "170x150", class:"card-img-top"; %>
            <% end %>
            <div class="card-body">
              <p class="card-title">
                <%= item.name %></br>
                ¥<%= item.with_tax_price.to_s(:delimited) %>
              <span class="small">(税込)</span>
              </p>
            </div>
          </div>
          <% end %>
          <%= paginate @items %>
        </div>
      </div>
  </div>
</div>
