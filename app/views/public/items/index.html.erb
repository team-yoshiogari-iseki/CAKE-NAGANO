<div class="container-fluid mt-5 mx-5">
  <div class="row">

    <%= render 'genre_search'%>

      <div class="col-md-9 offset-md-1">
      <h2>商品一覧</h2>
      <%= @items.each do |item| %>
      <div class="d-flex align-content-between flex-wrap">
          <p>
            <%= link_to item_path(item.id) do %>
              <%= attachment_image_tag item, :image, :fill, 100, 100 %>
            <% end %>
          </p></br>
          <p><%= item.name %></p></br>
          <p><%= item.price %></p>
      </div>
      <% end %>
      </div>
    </div>
  </div>
</div>