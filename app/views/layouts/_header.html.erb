              <li>
                <%= link_to '商品一覧', items_path, class: "mx-3 text-white" %>
              </li>
              <li>
                <%= link_to 'カート', cart_items_path, class: "mx-3 text-white" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "mx-3 text-white" %>
              </li>
            <% elsif admin_signed_in? %>
              <li>
                <%= link_to "商品一覧", admin_items_path, class: "mx-3 text-white" %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_customers_path, class: "mx-3 text-white" %>
