              <li>
                <%= link_to "ログイン", new_customer_session_path, class: "mx-3 btn btn-light" %>
              </li>
            <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="row pb-2">
    <div class="col-md-10">
      <%= search_form_for @search do |f| %>
    <%= f.submit "★", class: "btn btn-primary btn-sm float-right" %>
 <%= f.text_field :name_cont, class: "form-control form-control-sm col-md-2 float-right", placeholder: "Search" %>
<% end %>
    
    </div>
