                <%= link_to "新規登録", new_customer_registration_path, class: "mx-3 text-white" %>
              </li>
              <li>
                <%= link_to "ログイン", new_customer_session_path, class: "mx-3 text-white" %>
              </li>
            <% end %>
            <li>
            <%= search_form_for @search do |f| %>
              <%= f.text_field :name_cont, class: "form-control form-control-sm form-inline mx-3 ", placeholder: "Search" %>
            <% end %>
            </li>
        </ul>
      </div>
    </div>
