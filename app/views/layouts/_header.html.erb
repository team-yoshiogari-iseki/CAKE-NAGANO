<header class="border-bottom">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">

      <% if admin_signed_in? %>
        <a class="navbar-brand" href="/admin"><span class="font-italic">NAGANO CAKE</span></a>
      <% else %>
