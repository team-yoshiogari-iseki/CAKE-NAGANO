      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <p class="mr-5">ようこそ、 <%= current_customer.last_name %> さん！</p>
              <li>
                <%= link_to 'マイページ', customers_path(current_customer.id), class: "mx-3 btn btn-light" %>
              </li>
              <li>
                <%= link_to '商品一覧', items_path, class: "mx-3 btn btn-light" %>
              </li>
              <li>
                <%= link_to 'カート', cart_items_path, class: "mx-3 btn btn-light" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "mx-3 btn btn-light" %>
              </li>
            <% elsif admin_signed_in? %>
              <li>
                <%= link_to "商品一覧", admin_items_path, class: "mx-3 btn btn-light" %>
              </li>
              <li>
                <%= link_to "会員一覧", admin_customers_path, class: "mx-3 btn btn-light" %>
              </li>
              <li>
                <%= link_to "注文履歴一覧", admin_root_path, class: "mx-3 btn btn-light" %>
              </li>
              <li>
                <%= link_to "ジャンル一覧", admin_genres_path, class: "mx-3 btn btn-light" %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "mx-3 btn btn-light" %>
              </li>
